<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProyectoFinal" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline1">@color/teal_200</item>

        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="Toolbar">

        <item name="android:textColorPrimary">@color/purple_500</item>

        <item name="android:textColorSecondary">@color/black</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/opensans_semi_bold</item>
        <item name="android:fontWeight">600</item>
    </style>
</resources>